<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="GameTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Theme.AppCompat.NoActionBar</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorBlackOverlay</item>
    </style>

    <style name="BaseFont" parent="android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainFont" parent="BaseFont">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TitleFont" parent="BaseFont">
        <item name="android:textSize">70sp</item>
    </style>

    <style name="LargeFont" parent="BaseFont">
        <item name="android:textSize">55sp</item>
    </style>

    <style name="TipFont" parent="BaseFont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorHighlight</item>
    </style>

    <style name="HighlightFont" parent="BaseFont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>

</resources>
